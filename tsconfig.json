{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "ES6",
    "baseUrl": "./",
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "constants/*": ["./constants/*"],
      "screens/*": ["./screens/*"]
    }
  }
}
